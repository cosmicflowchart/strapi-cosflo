{
  "kind": "collectionType",
  "collectionName": "patterns",
  "info": {
    "singularName": "pattern",
    "pluralName": "patterns",
    "displayName": "Pattern",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "steps": {
      "type": "component",
      "repeatable": true,
      "component": "instruction.pattern-step"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "description": {
      "type": "blocks"
    },
    "hookSize": {
      "type": "string"
    },
    "yarn": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::material-variant.material-variant"
    },
    "otherMaterial": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::material-variant.material-variant"
    },
    "variants": {
      "displayName": "variants",
      "type": "component",
      "repeatable": true,
      "component": "instruction.variants"
    },
    "shortDescription": {
      "type": "string"
    },
    "projects": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::project.project",
      "mappedBy": "pattern"
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "content.text-block",
        "content.image",
        "content.image-grid",
        "content.image-carousel",
        "content.image-flexbox"
      ]
    },
    "image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    }
  }
}
