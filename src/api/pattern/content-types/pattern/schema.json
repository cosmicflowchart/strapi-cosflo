{
  "kind": "collectionType",
  "collectionName": "patterns",
  "info": {
    "singularName": "pattern",
    "pluralName": "patterns",
    "displayName": "Pattern",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "hookSize": {
      "type": "string"
    },
    "shortDescription": {
      "type": "string"
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "content.text-block",
        "content.image",
        "content.image-grid",
        "content.image-carousel",
        "content.image-flexbox"
      ]
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "material": {
      "displayName": "Pattern Material",
      "type": "component",
      "repeatable": true,
      "component": "material.pattern-material"
    },
    "pattern_variants": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::pattern-variant.pattern-variant",
      "mappedBy": "pattern"
    },
    "project_group": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::project-group.project-group",
      "mappedBy": "pattern"
    },
    "projects": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::project.project",
      "mappedBy": "pattern"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "patterns"
    },
    "otherMaterial": {
      "type": "component",
      "repeatable": true,
      "component": "material.other-material"
    }
  }
}
