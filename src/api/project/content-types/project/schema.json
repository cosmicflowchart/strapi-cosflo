{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Project",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "sku": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "shortDescription": {
      "type": "string"
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "content.text-block",
        "content.image",
        "content.image-grid",
        "content.image-carousel",
        "content.image-flexbox"
      ]
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "primaryMaterial": {
      "displayName": "Project Material",
      "type": "component",
      "repeatable": true,
      "component": "material.project-material"
    },
    "secondaryMaterial": {
      "type": "component",
      "repeatable": true,
      "component": "material.project-material"
    },
    "project_group": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::project-group.project-group",
      "inversedBy": "projects"
    },
    "pattern": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::pattern.pattern",
      "inversedBy": "projects"
    },
    "pattern_variant": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::pattern-variant.pattern-variant",
      "inversedBy": "project"
    }
  }
}
